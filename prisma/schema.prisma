model Desiege {
  id             Int       @id @default(autoincrement())
  gameId         Int       @unique
  winner         Int?
  attackedTokens Int?
  defendedTokens Int?
  eventIndexed   String?
  initialHealth  Int?      @default(0)
  startedOn      DateTime?
}

model Event {
  id                Int      @id @default(autoincrement())
  eventId           String   @unique
  blockNumber       Int      @default(0)
  transactionNumber Int      @default(0)
  chainId           String
  contract          String
  name              String
  parameters        Int[]
  timestamp         DateTime
  txHash            String
  status            Int      @default(0)
}

